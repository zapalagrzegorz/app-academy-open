<h1>Reserve the kitty</h1>

<form action="<%= cat_rental_requests_url %>" method="POST" >

  <p>
    <label for="name">Choose cat</label>

    <select name="cat_rental_request[id]" id="name">
      <option disabled selected>--  Cat's name</option>

      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>">
          <%= cat.name %>
        </option>
      <% end %>
    </select>
  </p>

  <p>
    <label for="start_date">Start rent date</label>
    <input name="cat_rental_request[end_date]" id="birth_date" type="date" min="<%= Date.today %>"  value="<%=  @cat_rental_request.start_date if @cat_rental_request.start_date   %>" >
  </p>

  <p>
    <label for="end_date">End rent date</label>
    <input name="cat_rental_request[end_date]" id="birth_date" type="date" min="<%= Date.today + 1 %>" value="<%= @cat_rental_request.end_date if @cat_rental_request.start_date  %>" >
  </p>

  <p>
    <input type="submit" value="Make reservation">
  </p>
</form>
