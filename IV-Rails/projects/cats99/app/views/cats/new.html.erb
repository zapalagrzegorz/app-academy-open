<% if @cat.errors.any? %>
  <%= render 'form_errors', model: @cat %>
<% end %>

<div class="grid-container form__container">
  <div class="grid-x">
    <div class="cell small-12">
      <h1 class="form__header">Create a new kitty!</h1>
    </div>
    <div class="cell small-12">
      <%= render 'form', cat: @cat, action: "new"  %>
    </div>
  </div>
</div>
