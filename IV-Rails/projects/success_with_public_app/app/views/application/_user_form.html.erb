<form action="<%= action %>"  method="POST" class="form">

  <%= auth_token %>

  <div>
    <label for="name">Email</label>

    <input id="name" type="text" name=user[email] value="" required>
  </div>

  <div>
    <label for="password">Password</label>
    <input id="password" type="password" name="user[password]" minlength="6" required >
  </div>

  <div>
    <input type="submit" value="<%= submit %>" class="button form__submit">
  </div>
</form>
